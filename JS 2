<body>
    <p id="demo"></p>
    <script>
    function current_date(sep){
        var today=new Date();
        var dd=today.getDate()
        var mm=today.getMonth()+1
        var yyyy=today.getFullYear()
        return dd+sep+mm+sep+yyyy
}
    console.log(current_date('/'))
    console.log(current_date('-'))
    </script>
</body>
