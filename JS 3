    <script>
        function days(m,yr)
        {
            return new Date(yr,m,0).getDate()
        }
        console.log(days(1, 2012));
        console.log(days(2, 2012));
        console.log(days(9, 2012));
        console.log(days(2, 2021));
    </script>
